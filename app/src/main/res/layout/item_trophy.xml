<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="20dp">

    <RelativeLayout
        android:id="@+id/rlTrophy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_item_trophy"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            tools:src="@drawable/premier" />


        <TextView
            android:id="@+id/total_trophy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_radius_5dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/mbold"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="1" />

        <TextView
            android:id="@+id/trophy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_item_trophy"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/mbold"
            android:gravity="center_horizontal|start"
            android:padding="20dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            tools:text="Premier League" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>